@model AccountDetailsViewModel
@{
	ViewData["Title"] = "Account Details";
}


<section id="account-details">
    <div class="container">


        <aside>

            <partial name="~/Views/Account/_AccountProfile.cshtml" />
            
        </aside>


        <div class="details-form">

            @if (!string.IsNullOrEmpty(TempData["StatusMessage"]?.ToString()))
            {
                @if (TempData.ContainsKey("IsSuccess") && (bool)TempData["IsSuccess"])
                {
                    <div class="alert alert-success">
                        @TempData["StatusMessage"]
                    </div>
                }
                else
                {
                    <div class="alert alert-danger">
                        @TempData["StatusMessage"]
                    </div>
                }
                
            }

            <div class="section-title">
                <h2>Account Details</h2>
            </div>
            <form method="post" asp-action="UpdateBasicInfo" asp-controller="Account" class="basic-info-form">
                <h5 class="blue form-title">Basic info</h5>
                <div class="first-name">
                    <label asp-for="Basic!.FirstName"></label>
                    <input asp-for="Basic!.FirstName" id="first-name" placeholder="Enter your first name" tabindex="1">
                    <span asp-validation-for="Basic!.FirstName"></span>
                </div>
                <div class="last-name">
                    <label asp-for="Basic!.LastName"></label>
                    <input asp-for="Basic!.LastName" id="last-name" placeholder="Enter your last name" tabindex="2">
                    <span asp-validation-for="Basic!.LastName"></span>
                </div>
                <div class="email">
                    <label asp-for="Basic!.Email"></label>
                    <input asp-for="Basic!.Email" id="email" placeholder="Enter your email adress" tabindex="3">
                    <span asp-validation-for="Basic!.Email"></span>
                </div>
                <div class="phone">
                    <label asp-for="Basic!.PhoneNumber"></label>
                    <input asp-for="Basic!.PhoneNumber" id="phone" placeholder="Enter your phone" tabindex="4">
                </div>
                <div class="biography">
                    <label asp-for="Basic!.Bio"></label>
                    <textarea asp-for="Basic!.Bio" rows="3" cols="30"></textarea>
                </div>
                <div class="buttons">
                    <button type="reset" class="btn-gray">Cancel</button>
                    <button type="submit" class="btn-theme">Save Changes</button>
                </div>
            </form>
            <form method="post" asp-action="UpdateAddressInfo" asp-controller="Account" class="address-form">
                <h5 class="blue form-title">Address</h5>
                <div class="address1">
                    <label asp-for="Address!.AddressLine_1!"></label>
                    <input asp-for="Address!.AddressLine_1!">
                    <span asp-validation-for="Address!.AddressLine_1!"></span>
                </div>
                <div class="address2">
                    <label asp-for="Address!.AddressLine_2!"></label>
                    <input asp-for="Address!.AddressLine_2!">
                    <span asp-validation-for="Address!.AddressLine_2!"></span>
                </div>
                <div class="postal-code">
                    <label asp-for="Address!.PostalCode!">Postal Code</label>
                    <input asp-for="Address!.PostalCode!">
                    <span asp-validation-for="Address!.PostalCode!"></span>
                </div>
                <div class="city">
                    <label asp-for="Address!.City!"></label>
                    <input asp-for="Address!.City!">
                    <span asp-validation-for="Address!.City!"></span>
                </div>
                <div class="buttons">
                    <button class="btn-gray" href="" tabindex="12">Cancel</button>
                    <button class="btn-theme" href="#" tabindex="13">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</section>